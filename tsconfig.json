{
  "compilerOptions": {
    "incremental": true,
    "noEmit": true,
    "strict": false,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "strictNullChecks": false,
    "noImplicitThis": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "target": "es5",
    "lib": ["es6"]
  },
  "include": ["src", "jest.config.js", "test"]
}
